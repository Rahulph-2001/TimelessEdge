<!DOCTYPE HTML>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Men Fashion Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        :root {
            --primary-bg: #1a1a2e;
            --sidebar-bg: #16213e;
            --text-dark: #e0e0e0;
            --hover-bg: #0f3460;
            --dropdown-bg: #1a1a2e;
            --dropdown-hover: #e94560;
            --white: #ffffff;
            --accent-color: #e94560;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: var(--sidebar-bg);
            line-height: 1.6;
        }

        .navbar {
            background-color: #16213e;
            padding: 31px 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .navbar-aside {
            background-color: var(--sidebar-bg);
            width: 250px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            transition: all 0.3s ease;
        }

        .aside-top {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px;
            border-bottom: 1px solid rgba(0, 0, 0, 0.1);
        }

        .menu-aside {
            list-style: none;
        }

        .menu-item {
            margin: 5px 0;
        }

        .menu-item a.menu-link {
            display: flex;
            align-items: center;
            color: var(--text-dark);
            text-decoration: none;
            padding: 10px 15px;
            transition: all 0.3s ease;
        }

        .menu-item a.menu-link:hover,
        .menu-item a.menu-link.active {
            background-color: var(--hover-bg);
            color: var(--white);
            transform: translateX(5px);
        }

        .menu-item a.menu-link i {
            margin-right: 10px;
            color: var(--accent-color);
        }

        .dropdown-menu {
            background-color: var(--dropdown-bg);
            border: none;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .dropdown-item {
            color: var(--text-dark);
            transition: all 0.3s ease;
        }

        .dropdown-item:hover {
            background-color: var(--dropdown-hover);
            color: var(--white);
        }

        .main-wrap {
            background-color: var(--sidebar-bg);
            margin-left: 250px;
            transition: all 0.3s ease;
            min-height: 100vh;
            padding: 20px;
        }

        .content-main {
            background-color: var(--sidebar-bg);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .content-header {
            margin-bottom: 20px;
            font-size: 24px;
            color: var(--white);
        }

        .logo {
            max-height: 50px;
        }

        .profile-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
        }
    </style>
</head>

<body>
    <div class="screen-overlay"></div>

    <aside class="navbar-aside" id="offcanvas_aside">
        <div class="aside-top">
            <a href="#" class="brand-wrap">
                <img src="/img/New Project (28).png" class="logo" alt="Men Fashion Dashboard">
            </a>
        </div>
        <nav>
            <ul class="menu-aside">
                <li class="menu-item">
                    <a class="menu-link" href="/admin">
                        <i class="fas fa-home"></i>
                        <span class="text">Dashboard</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a class="menu-link" href="/admin/users">
                        <i class="fas fa-users"></i>
                        <span class="text">Customers</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a class="menu-link" href="/admin/category">
                        <i class="fas fa-list"></i>
                        <span class="text">Category</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a class="menu-link" href="/admin/brands">
                        <i class="fas fa-tags"></i>
                        <span class="text">Brands</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a class="menu-link" href="/admin/addProducts">
                        <i class="fas fa-plus-square"></i>
                        <span class="text">Add Product</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a class="menu-link" href="/admin/products">
                        <i class="fas fa-shopping-bag"></i>
                        <span class="text">Products</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a class="menu-link" href="/admin/coupon">
                        <i class="fas fa-ticket-alt"></i>
                        <span class="text">Coupon</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a class="menu-link" href="/admin/banner">
                        <i class="fas fa-image"></i>
                        <span class="text">Banner</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a class="menu-link" href="/admin/orderList">
                        <i class="fas fa-shopping-cart"></i>
                        <span class="text">Orders</span>
                    </a>
                </li>
            </ul>
        </nav>
    </aside>

    <main class="main-wrap">
        <header class="navbar">
            <div class="col-search">
                <!-- Search can be added here -->
            </div>
            <div class="col-nav">

                <ul class="nav">
                    <li class="dropdown nav-item">
                        <div class="dropdown-menu dropdown-menu-end">
                            <a class="dropdown-item text-danger" href="/admin/logout">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </a>
                        </div>
                    </li>
                </ul>
            </div>
        </header>