    min-height: 100vh;
}

.row {
    width: 100%;
    max-width: 600px;
}

.col-md-6 {
    background: #fff;
    padding: 30px;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.mb-4 {
    margin-bottom: 20px;
}

.mt-60 {
    margin-top: 60px;
}

.mt-30 {
    margin-top: 30px;
}

.form-label {
    font-weight: 600;
    color: #333;
}

.form-control {
    padding: 10px;
    font-size: 14px;
    border-radius: 4px;
    border: 1px solid #ced4da;
    transition: border-color 0.3s ease-in-out;
}

.form-control:focus {
    border-color: #007bff;
    outline: none;
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.2);
}

