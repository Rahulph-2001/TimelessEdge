<%- include("../../views/partials/admin/header") %>

<style>
/* General Styles */
body {
    font-family: Arial, sans-serif;
    background-color: #f8f9fa;
}

/* Center the content title */
.content-header {
    text-align: center;
    margin: 20px 0;
}

/* Style the title */
.content-title {
    font-size: 24px;
    font-weight: bold;
    color: #f7f3f3;
}

/* Center the search bar */
.card-header {
    display: flex;
    justify-content: center;
    margin-bottom: 20px;
}

/* Style the search bar */
.input-group {
    width: 500px;
    max-width: 90%;
    border-radius: 20px;
    overflow: hidden;
    border: 1px solid #ccc;
}

.input-group input {
    border: none;
    padding: 10px;
    width: 80%;
    border-radius: 20px;
}

.input-group button {
    border: none;
    background-color: #007bff;
    color: white;
    padding: 10px;
    cursor: pointer;
    border-radius: 20px;
}

.input-group button:hover {
    background-color: #0056b3;
}

/* Style the table container */
.table-container {
    display: flex;
    justify-content: center;
    padding: 20px;
}

/* Style the table */
.table {
    width: 90%;
    max-width: 1200px;
    border-collapse: collapse;
    background-color: white;
    box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
}

/* Table header */
.table thead th {
    background-color: #007bff;
    color: white;
    padding: 12px;
    text-align: center;
}

/* Table rows */
.table tbody td {
    text-align: center;
    padding: 10px;
    border-bottom: 1px solid #ddd;
}

/* Button styles */
.btn {
    border-radius: 5px;
    font-weight: bold;
    padding: 8px 12px;
    display: inline-block;
    text-align: center;
    margin: 2px;
}

/* Ensure anchor tags inside buttons inherit styles */
.btn a {
    text-decoration: none;
    color: white;
    display: block;
}

/* Button colors */
.btn-info {
    background-color: #17a2b8;
    border: none;
}

.btn-info:hover {
    background-color: #138496;
}

.btn-danger {
    background-color: #dc3545;
    border: none;
}

.btn-danger:hover {
    background-color: #c82333;
}

.btn-success {
    background-color: #28a745;
    border: none;
}

.btn-success:hover {
    background-color: #218838;
}

.btn-warning {
    background-color: #ffc107;
    border: none;
    color: #212529;
}

.btn-warning:hover {
    background-color: #e0a800;
}

/* Pagination styles */
.pagination-container {
    display: flex;
    justify-content: center;
    margin: 20px 0;
}

.pagination {
    display: inline-flex;
    list-style: none;
    padding: 0;
    margin: 0;
    border-radius: 4px;
    overflow: hidden;
}

.pagination li {
    display: inline-block;
}

.pagination li a,
.pagination li span {
    color: #007bff;
    background-color: #fff;
    border: 1px solid #dee2e6;
    padding: 8px 12px;
    text-decoration: none;
    display: block;
}

.pagination li.active a,
.pagination li.active span {
    background-color: #007bff;
    color: white;
    border-color: #007bff;
}

.pagination li a:hover {
    background-color: #e9ecef;
}

.pagination li.disabled span {
    color: #6c757d;
    pointer-events: none;
    background-color: #fff;
}

/* Offer badge style */
.offer-badge {
    background-color: #28a745;
    color: white;
    padding: 3px 8px;
    border-radius: 12px;
    font-size: 12px;
    font-weight: bold;
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .table {
        width: 100%;
    }

    .input-group {
        width: 100%;
    }

    .btn {
        width: auto;
    }
    
    .pagination li a,
    .pagination li span {
        padding: 6px 8px;
    }
}
</style>

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="/css/admin.css">
</head>

<div class="content-header">
    <h2 class="content-title">Products</h2>
</div>

<header class="card-header">
    <form action="" method="get">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search products" name="search" value="<%= searchQuery %>">
            <button class="btn btn-primary" type="submit">Search</button>
        </div>
    </form>
</header>

<div class="table-container">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Brand</th>
                <th>Category</th>
                <th>Sale Price</th>
                <th>Offer</th>
                <th>Quantity</th>
                <th>Image</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
           <% products.forEach((ele) => { %>
            <tr>
                <td><%= ele.productName %></td>
                <td><%= ele.brand ? ele.brand.name : 'No Brand' %></td>
                <td><%= ele.category ? ele.category.name : 'No Category' %></td>
                <td>Rs :<%= ele.salePrice.toLocaleString() %></td>
                <td>
                    <% if (ele.productOffer > 0) { %>
                        <span class="offer-badge"><%= ele.productOffer %>% OFF</span>
                    <% } else { %>
                        No Offer
                    <% } %>
                </td>
                <td><%= ele.quantity %></td>
                <td>
                    <% if (ele.productImages && ele.productImages.length > 0) { %>
                        <img src="<%= ele.productImages[0] %>" alt="Product Image" width="50">
                    <% } else { %>
                        No Image
                    <% } %>
                </td>
                <td>
                    <% if(ele.isBlocked) { %>
                        <button onclick="blockProduct('<%= ele._id%>', false)" class="btn btn-success">Unblock</button>
                    <% } else { %>
                        <button onclick="blockProduct('<%= ele._id%>', true)" class="btn btn-danger">Block</button>
                    <% } %>
                </td>
                <td>
                    <button onclick="editProduct('<%=ele._id%>')" class="btn btn-info">Edit</button>
                    <% if (ele.productOffer > 0) { %>
                        <button onclick="removeOffer('<%=ele._id%>')" class="btn btn-danger">Remove Offer</button>
                    <% } else { %>
                        <button onclick="addOffer('<%=ele._id%>')" class="btn btn-warning">Add Offer</button>
                    <% } %>
                </td>
            </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<!-- Pagination Controls -->
<div class="pagination-container">
    <ul class="pagination">
        <% if (hasPrevPage) { %>
            <li><a href="?page=<%= currentPage - 1 %><%= searchQuery ? '&search=' + searchQuery : '' %>">Previous</a></li>
        <% } else { %>
            <li class="disabled"><span>Previous</span></li>
        <% } %>
        
        <% for (let i = 1; i <= totalPages; i++) { %>
            <% if (i === currentPage) { %>
                <li class="active"><span><%= i %></span></li>
            <% } else { %>
                <li><a href="?page=<%= i %><%= searchQuery ? '&search=' + searchQuery : '' %>"><%= i %></a></li>
            <% } %>
        <% } %>
        
        <% if (hasNextPage) { %>
            <li><a href="?page=<%= currentPage + 1 %><%= searchQuery ? '&search=' + searchQuery : '' %>">Next</a></li>
        <% } else { %>
            <li class="disabled"><span>Next</span></li>
        <% } %>
    </ul>
</div>

<div class="container mt-3"></div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script>
    function editProduct(productId){
        Swal.fire({
            title:`Are you Sure?`,
            text:`Do you really want to edit this Product`,
            icon:"warning",
            showCancelButton: true,
            confirmButtonColor: "#d33",
            cancelButtonColor: "#3085d6",
            confirmButtonText: `Yes, edit it!`
        }).then((ele)=>{
            if(ele.isConfirmed){
              window.location.href=`/admin/editProduct/${productId}`
            }
        })
    }
    
    function blockProduct(productId, isBlocked) {
        let action = isBlocked ? "Block" : "Unblock"; 
        Swal.fire({
            title: `Are you sure?`,
            text: `Do you really want to ${action.toLowerCase()} this product?`,
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#d33",
            cancelButtonColor: "#3085d6",
            confirmButtonText: `Yes, ${action} it!`
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: `/admin/blockProduct/${productId}`,
                    method: "PUT",
                    data: JSON.stringify({ isBlocked: isBlocked }),
                    contentType: "application/json",
                    dataType: "json",
                    success: function (response) {
                        if (response.success) {
                            Swal.fire({
                                title: `${action}ed!`,
                                text: `The product has been ${action.toLowerCase()}ed.`,
                                icon: "success",
                                confirmButtonText: "OK"
                            }).then(() => {
                                location.reload();
                            });
                        } else {
                            Swal.fire("Error!", "Something went wrong.", "error");
                        }
                    },
                    error: function () {
                        Swal.fire("Error!", "An unexpected error occurred.", "error");
                    }
                });
            }
        });
    }
    function addOffer(productId) {
    Swal.fire({
        title: 'Add Product Offer',
        input: 'number',
        inputLabel: 'Offer Percentage (%)',
        inputPlaceholder: 'Enter percentage (1-99)',
        inputAttributes: {
            min: 1,
            max: 99,
            step: 1
        },
        showCancelButton: true,
        confirmButtonText: 'Add Offer',
        inputValidator: (value) => {
            if (!value) {
                return 'Please enter a value';
            }
            if (value < 1 || value > 99) {
                return 'Offer must be between 1% and 99%';
            }
        }
    }).then((result) => {
        if (result.isConfirmed) {
            const offerPercentage = parseInt(result.value);
            $.ajax({
                url: `/admin/addProductOffer/${productId}`,
                method: "PUT",
                data: JSON.stringify({ productOffer: offerPercentage }),
                contentType: "application/json",
                dataType: "json",
                success: function(response) {
                    if (response.success) {
                        Swal.fire({
                            title: 'Offer Added!',
                            text: `${offerPercentage}% offer has been added to the product.`,
                            icon: 'success',
                            confirmButtonText: 'OK'
                        }).then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire('Error!', response.message || 'Something went wrong.', 'error');
                    }
                },
                error: function(xhr) {
                    console.error("Error response:", xhr.responseText);
                    Swal.fire('Error!', 'An unexpected error occurred.', 'error');
                }
            });
        }
    });
}

function removeOffer(productId) {
    Swal.fire({
        title: 'Remove Offer',
        text: 'Are you sure you want to remove the offer from this product?',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#d33',
        cancelButtonColor: '#3085d6',
        confirmButtonText: 'Yes, remove it!'
    }).then((result) => {
        if (result.isConfirmed) {
            $.ajax({
                url: `/admin/removeProductOffer/${productId}`,
                method: 'PUT',
                data: JSON.stringify({}), 
                contentType: 'application/json',
                dataType: 'json',
                success: function(response) {
                    if (response.success) {
                        Swal.fire({
                            title: 'Offer Removed!',
                            text: 'The offer has been removed from the product.',
                            icon: 'success',
                            confirmButtonText: 'OK'
                        }).then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire('Error!', response.message || 'Something went wrong.', 'error');
                    }
                },
                error: function(xhr) {
                    console.error("Error response:", xhr.responseText);
                    Swal.fire('Error!', 'An unexpected error occurred.', 'error');
                }
            });
        }
    });
}
</script>

