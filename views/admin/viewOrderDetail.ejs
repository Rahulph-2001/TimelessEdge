<%- include("../../views/partials/admin/header") %>
<style>
 
  :root {
    --primary-color: #4361ee;
    --secondary-color: #3f37c9;
    --success-color: #0bb07b;
    --info-color: #2196f3;
    --warning-color: #f59e0b;
    --danger-color: #ef4444;
    --dark-color: #1e293b;
    --light-color: #f8fafc;
    --border-color: #e2e8f0;
    --text-color: #334155;
    --text-muted: #64748b;
    --card-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    --transition: all 0.3s ease;
  }
  
  body {
    background-color: #f1f5f9;
    color: var(--text-color);
  }
  
  .content-main {
    padding: 2rem;
    background-color: #f1f5f9;
  }
  
  .content-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }
  
  .content-title {
    color: var(--dark-color);
    margin-bottom: 0.25rem;
    font-weight: 700;
    font-size: 1.75rem;
  }
  
  .order-detail-card {
    border-radius: 12px;
    box-shadow: var(--card-shadow);
    margin-bottom: 1.5rem;
    border: none;
    overflow: hidden;
    transition: var(--transition);
  }
  
  .order-detail-card:hover {
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  }
  
  .order-detail-header {
    background-color: #fff;
    padding: 1.5rem;
    border-bottom: 1px solid var(--border-color);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .order-detail-header h5 {
    margin: 0;
    font-weight: 600;
    color: var(--dark-color);
    font-size: 1.1rem;
  }
  
  .order-detail-body {
    padding: 1.5rem;
    background-color: #fff;
  }
  
  
  .status-badge {
    display: inline-block;
    padding: 0.35rem 0.85rem;
    font-size: 0.8rem;
    font-weight: 500;
    border-radius: 30px;
    letter-spacing: 0.3px;
    text-transform: uppercase;
  }
  
 
  .order-info {
    padding: 0.5rem 0;
  }
  
  .order-id {
    font-weight: 700;
    font-size: 1.2rem;
    color: var(--dark-color);
  }
  
  
  .order-timeline {
    margin-top: 1.5rem;
  }
  
  .timeline-item {
    position: relative;
    padding-left: 30px;
    padding-bottom: 25px;
    border-left: 2px solid #e9ecef;
    margin-left: 10px;
  }
  
  .timeline-item:last-child {
    padding-bottom: 0;
  }
  
  .timeline-item:before {
    content: '';
    position: absolute;
    left: -10px;
    top: 0;
    width: 18px;
    height: 18px;
    border-radius: 50%;
    background: #fff;
    border: 2px solid #cbd5e1;
    z-index: 1;
  }
  
  .timeline-item.active:before {
    background: var(--primary-color);
    border-color: var(--primary-color);
    box-shadow: 0 0 0 4px rgba(67, 97, 238, 0.2);
  }
  
  .timeline-date {
    font-size: 0.8rem;
    color: var(--text-muted);
    margin-bottom: 0.25rem;
    font-weight: 500;
  }
  
  .timeline-title {
    font-weight: 600;
    color: var(--dark-color);
    margin-bottom: 0.25rem;
  }
  
  .timeline-content {
    font-size: 0.9rem;
    color: var(--text-muted);
  }
  
 
  .address-card {
    background-color: #f8fafc;
    padding: 1.25rem;
    border-radius: 10px;
    border-left: 4px solid var(--primary-color);
  }
  
  .address-card h6 {
    color: var(--dark-color);
    font-weight: 600;
    margin-bottom: 0.75rem;
  }
  
  
  .product-image {
    width: 70px;
    height: 70px;
    object-fit: cover;
    border-radius: 10px;
    margin-right: 15px;
    border: 1px solid var(--border-color);
  }
  
  .product-details {
    display: flex;
    flex-direction: column;
  }
  
  
  .table {
    border-collapse: separate;
    border-spacing: 0;
    width: 100%;
  }
  
  .table thead th {
    background-color: #f8fafc;
    color: var(--dark-color);
    font-weight: 600;
    border-top: none;
    padding: 1rem;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .table tbody td {
    padding: 1.25rem 1rem;
    vertical-align: middle;
    border-top: 1px solid var(--border-color);
    color: var(--text-color);
  }
  
  .table tbody tr:hover {
    background-color: #f8fafc;
  }
  
  
  .amounts-table {
    width: 100%;
    max-width: 400px;
    margin-left: auto;
  }
  
  .amount-label {
    padding: 0.75rem 0;
    color: var(--text-muted);
    font-weight: 500;
  }
  
  .amount-value {
    padding: 0.75rem 0;
    text-align: right;
    font-weight: 600;
    color: var(--dark-color);
  }
  
  .total-row {
    border-top: 2px solid var(--border-color);
  }
  
  .total-row .amount-label {
    font-weight: 700;
    color: var(--dark-color);
    font-size: 1.05rem;
  }
  
  .total-row .amount-value {
    font-weight: 700;
    color: var(--primary-color);
    font-size: 1.25rem;
  }
  
  
  .btn {
    padding: 0.6rem 1.5rem;
    font-weight: 500;
    border-radius: 8px;
    transition: var(--transition);
    letter-spacing: 0.3px;
  }
  
  .btn-primary {
    background-color: var(--primary-color);
    border-color: var(--primary-color);
  }
  
  .btn-primary:hover {
    background-color: var(--secondary-color);
    border-color: var(--secondary-color);
    box-shadow: 0 4px 10px rgba(67, 97, 238, 0.3);
  }
  
  .btn-light {
    background-color: #fff;
    border-color: var(--border-color);
    color: var(--text-color);
  }
  
  .btn-light:hover {
    background-color: #f8fafc;
    border-color: #cbd5e1;
    color: var(--dark-color);
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
  }
  
  .action-buttons {
    display: flex;
    gap: 0.75rem;
  }
  
  
  .payment-method p {
    background-color: #f8fafc;
    padding: 0.75rem 1rem;
    border-radius: 8px;
    font-weight: 500;
    border-left: 4px solid var(--primary-color);
    margin-bottom: 0;
  }
  
 
  .customer-info p {
    margin-bottom: 0.5rem;
    display: flex;
    align-items: center;
  }
  
  .customer-info p strong {
    min-width: 80px;
    display: inline-block;
  }
  
  
  @media (max-width: 992px) {
    .content-main {
      padding: 1.5rem;
    }
  }
  
  @media (max-width: 768px) {
    .content-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }
    
    .action-buttons {
      width: 100%;
    }
    
    .btn {
      flex: 1;
    }
    
    .order-detail-header {
      padding: 1.25rem;
    }
    
    .order-detail-body {
      padding: 1.25rem;
    }
  }
  
  @media (max-width: 576px) {
    .content-main {
      padding: 1rem;
    }
    
    .table thead {
      display: none;
    }
    
    .table tbody td {
      display: block;
      text-align: right;
      padding: 0.75rem;
      position: relative;
      padding-left: 50%;
    }
    
    .table tbody td:before {
      content: attr(data-label);
      position: absolute;
      left: 0.75rem;
      width: 45%;
      padding-right: 10px;
      white-space: nowrap;
      text-align: left;
      font-weight: 600;
    }
    
    .table tbody tr {
      display: block;
      border: 1px solid var(--border-color);
      border-radius: 8px;
      margin-bottom: 1rem;
    }
    
    .table tbody td:first-child {
      border-top: none;
    }
    
    .product-image {
      margin-right: 0;
      margin-bottom: 0.5rem;
    }
    
    .d-flex.align-items-center {
      flex-direction: column;
      align-items: flex-end !important;
    }
  }
</style>

<section class="content-main">

    <div class="content-header">
        <div>
            <h2 class="content-title">Order Details</h2>
            <p class="text-muted">Order #<%= order.orderId %></p>
        </div>
        
    </div>

    <div class="row">

        <div class="col-lg-4">
            <div class="order-detail-card">
                <div class="order-detail-header">
                    <h5>Order Status</h5>
                    <span class="status-badge 
                        <%= order.status === 'Pending' ? 'bg-warning text-dark' : 
                           order.status === 'Processing' ? 'bg-info text-white' : 
                           order.status === 'Shipped' ? 'bg-primary text-white' :
                           order.status === 'Delivered' ? 'bg-success text-white' :
                           order.status === 'Cancelled' ? 'bg-danger text-white' :
                           order.status === 'Return Request' ? 'bg-secondary text-white' :
                           order.status === 'Returned' ? 'bg-dark text-white' : 'bg-secondary text-white' %>">
                        <%= order.status %>
                    </span>
                </div>
                <div class="order-detail-body">
                    <div class="order-info mb-4">
                        <p class="order-id mb-2">Order #<%= order.orderId %></p>
                        <p class="mb-1">
                            <i class="far fa-calendar-alt me-2 text-muted"></i>
                            <%= new Date(order.createdOn).toLocaleDateString('en-US', { 
                                year: 'numeric', 
                                month: 'long', 
                                day: 'numeric' 
                            }) %>
                        </p>
                    </div>
                    

                    <div class="order-timeline mt-4">
                        <h6 class="mb-3 fw-bold">Order Timeline</h6>
                        
                        <div class="timeline-item <%= order.status === 'Pending' || order.status === 'Processing' || order.status === 'Shipped' || order.status === 'Delivered' ? 'active' : '' %>">
                            <div class="timeline-date">
                                <i class="far fa-clock me-1"></i>
                                <%= new Date(order.createdOn).toLocaleDateString('en-US', { 
                                    year: 'numeric', 
                                    month: 'short', 
                                    day: 'numeric',
                                    hour: '2-digit',
                                    minute: '2-digit'
                                }) %>
                            </div>
                            <div class="timeline-title">Order Placed</div>
                            <div class="timeline-content">Order has been placed successfully.</div>
                        </div>
                        
                        <% if(order.status !== 'Pending') { %>
                        <div class="timeline-item <%= order.status === 'Processing' || order.status === 'Shipped' || order.status === 'Delivered' ? 'active' : '' %>">
                            <div class="timeline-date">
                                <i class="far fa-clock me-1"></i>
                                -
                            </div>
                            <div class="timeline-title">Order Processing</div>
                            <div class="timeline-content">Order is being processed.</div>
                        </div>
                        <% } %>
                        
                        <% if(order.status === 'Shipped' || order.status === 'Delivered') { %>
                        <div class="timeline-item <%= order.status === 'Shipped' || order.status === 'Delivered' ? 'active' : '' %>">
                            <div class="timeline-date">
                                <i class="far fa-clock me-1"></i>
                                -
                            </div>
                            <div class="timeline-title">Order Shipped</div>
                            <div class="timeline-content">Order has been shipped.</div>
                        </div>
                        <% } %>
                        
                        <% if(order.status === 'Delivered') { %>
                        <div class="timeline-item active">
                            <div class="timeline-date">
                                <i class="far fa-clock me-1"></i>
                                -
                            </div>
                            <div class="timeline-title">Order Delivered</div>
                            <div class="timeline-content">Order has been delivered successfully.</div>
                        </div>
                        <% } %>
                        
                        <% if(order.status === 'Cancelled') { %>
                        <div class="timeline-item active">
                            <div class="timeline-date">
                                <i class="far fa-clock me-1"></i>
                                -
                            </div>
                            <div class="timeline-title">Order Cancelled</div>
                            <div class="timeline-content">Order has been cancelled.</div>
                        </div>
                        <% } %>
                        
                        <% if(order.status === 'Return Request') { %>
                        <div class="timeline-item active">
                            <div class="timeline-date">
                                <i class="far fa-clock me-1"></i>
                                -
                            </div>
                            <div class="timeline-title">Return Requested</div>
                            <div class="timeline-content">Customer has requested a return.</div>
                        </div>
                        <% } %>
                        
                        <% if(order.status === 'Returned') { %>
                        <div class="timeline-item active">
                            <div class="timeline-date">
                                <i class="far fa-clock me-1"></i>
                                -
                            </div>
                            <div class="timeline-title">Item Returned</div>
                            <div class="timeline-content">Item has been returned successfully.</div>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>
            
          
            <div class="order-detail-card">
                <div class="order-detail-header">
                    <h5>Customer Information</h5>
                </div>
                <div class="order-detail-body">
                    <div class="customer-info">
                        <% if (userData) { %>
                            <p><strong>Name:</strong> <%= userData.name %></p>
                            <p><strong>Email:</strong> <a href="mailto:<%= userData.email %>"><%= userData.email %></a></p>
                            <p><strong>Phone:</strong> <a href="tel:<%= userData.phone %>"><%= userData.phone %></a></p>
                        <% } else { %>
                            <p>Customer information not available.</p>
                        <% } %>
                    </div>
                    
                    <div class="address-card mt-4">
                        <h6 class="mb-2">Shipping Address</h6>
                        <% if (addressDetails) { %>
                            <p class="mb-1"><i class="fas fa-user me-2 text-muted"></i><%= addressDetails.name %></p>
                            <p class="mb-1"><i class="fas fa-phone me-2 text-muted"></i><%= addressDetails.phone %></p>
                            <% if (addressDetails.landMark) { %>
                                <p class="mb-1"><i class="fas fa-map-marker-alt me-2 text-muted"></i><%= addressDetails.landMark %></p>
                            <% } %>
                            <p class="mb-1"><i class="fas fa-map me-2 text-muted"></i>
                                <%= addressDetails.city %>, 
                                <%= addressDetails.state %> - <%= addressDetails.pincode %>
                            </p>
                        <% } else { %>
                            <p>Address information not available.</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
        
      
        <div class="col-lg-8">
          
            <div class="order-detail-card">
                <div class="order-detail-header">
                    <h5>Order Items</h5>
                </div>
                <div class="order-detail-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (order && order.orderedItems && order.orderedItems.length > 0) { %>
                                    <% order.orderedItems.forEach(function(item) { %>
                                        <tr>
                                            <td data-label="Product">
                                                <div class="d-flex align-items-center">
                                                    <% if (item.product && item.product.productImages && item.product.productImages.length > 0) { %>
                                                        <img src="<%= item.product.productImages[0] %>" 
                                                             alt="<%= item.product.productName %>" 
                                                             class="product-image">
                                                    <% } else { %>
                                                        <img src="/images/placeholder.jpg" 
                                                             alt="Placeholder Image" 
                                                             class="product-image">
                                                    <% } %>
                                                    <div class="product-details">
                                                        <div class="fw-bold"><%= item.product.productName %></div>
                                                        <small class="text-muted">SKU: <%= item.product._id || 'N/A' %></small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td data-label="Quantity"><%= item.quantity %></td>
                                            <td data-label="Price">₹<%= item.price.toLocaleString() %></td>
                                            <td data-label="Status">
                                                <span class="status-badge 
                                                    <%= order.status === 'Pending' ? 'bg-warning text-dark' : 
                                                       order.status === 'Processing' ? 'bg-info text-white' : 
                                                       order.status === 'Shipped' ? 'bg-primary text-white' :
                                                       order.status === 'Delivered' ? 'bg-success text-white' :
                                                       order.status === 'Cancelled' ? 'bg-danger text-white' :
                                                       order.status === 'Return Request' ? 'bg-secondary text-white' :
                                                       order.status === 'Returned' ? 'bg-dark text-white' : 'bg-secondary text-white' %>">
                                                    <%= order.status %>
                                                </span>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="4" class="text-center">No items found</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

           
            <div class="order-detail-card">
                <div class="order-detail-header">
                    <h5>Payment Information</h5>
                </div>
                <div class="order-detail-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="payment-method">
                                <h6 class="mb-3">Payment Method</h6>
                                <p>
                                    <i class="fas <%= order.paymentMethod === 'COD' ? 'fa-money-bill-wave' : 
                                                    order.paymentMethod === 'Card' ? 'fa-credit-card' : 
                                                    order.paymentMethod === 'UPI' ? 'fa-mobile-alt' : 
                                                    'fa-wallet' %> me-2"></i>
                                    <%= order.paymentMethod || 'Not specified' %>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h6 class="mb-3">Order Summary</h6>
                            <table class="amounts-table">
                                <tr>
                                    <td class="amount-label">Subtotal</td>
                                    <td class="amount-value">₹<%= order.totalPrice.toLocaleString() %></td>
                                </tr>
                                <% if (order.discount > 0) { %>
                                <tr>
                                    <td class="amount-label">Discount</td>
                                    <td class="amount-value text-success">-₹<%= order.discount.toLocaleString() %></td>
                                </tr>
                                <% } %>
                                <tr class="total-row">
                                    <td class="amount-label pt-3">Total</td>
                                    <td class="amount-value pt-3">₹<%= order.finalAmount.toLocaleString() %></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            
          
        </div>
    </div>
</section>
<%- include("../../views/partials/admin/footer") %>