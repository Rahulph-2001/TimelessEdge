<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %></title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Arial', sans-serif;
    }
    .container {
      max-width: 1200px;
      margin: 20px auto;
      padding: 20px;
      background: #fff;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    .shipping-address, .order-summary {
      margin-bottom: 30px;
    }
    .shipping-address h2, .order-summary h2 {
      font-size: 24px;
      margin-bottom: 20px;
      color: #333;
    }
    .address-list {
      display: flex;
      flex-direction: column;
      gap: 15px;
    }
    .address-card {
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 15px;
      cursor: pointer;
      transition: all 0.3s ease;
    }
    .address-card:hover {
      border-color: #007bff;
      box-shadow: 0 0 10px rgba(0, 123, 255, 0.1);
    }
    .address-card.selected {
      border-color: #007bff;
      background-color: #f0f8ff;
    }
    .address-content {
      margin-left: 10px;
    }
    .address-name {
      font-weight: bold;
      color: #333;
    }
    .address-details, .address-phone {
      color: #666;
      margin-top: 5px;
    }
    .add-address-btn {
      display: inline-block;
      margin-top: 15px;
      padding: 10px 20px;
      background-color: #007bff;
      color: #fff;
      border-radius: 5px;
      text-decoration: none;
      transition: background-color 0.3s ease;
    }
    .add-address-btn:hover {
      background-color: #0056b3;
    }
    .product-details {
      display: flex;
      align-items: center;
      margin-bottom: 15px;
    }
    .product-image {
      width: 80px;
      height: 80px;
      border-radius: 8px;
      margin-right: 15px;
    }
    .product-info h3 {
      font-size: 18px;
      margin-bottom: 5px;
      color: #333;
    }
    .product-info p {
      margin: 0;
      color: #666;
    }
    .total, .discount, .grand-total {
      font-size: 18px;
      margin: 10px 0;
      color: #333;
    }
    .grand-total {
      font-weight: bold;
      color: #007bff;
    }
    .cart-discount {
      margin: 20px 0;
    }
    .input-group {
      display: flex;
      gap: 10px;
      margin-bottom: 10px;
    }
    .coupon-input {
      flex: 1;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 5px;
    }
    .apply-button {
      padding: 10px 20px;
      background-color: #28a745;
      color: #fff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }
    .apply-button:hover {
      background-color: #218838;
    }
    .payment-methods {
      margin: 20px 0;
    }
    .payment-option {
      margin: 10px 0;
    }
    .payment-option label {
      display: flex;
      align-items: center;
      cursor: pointer;
    }
    .payment-option input {
      margin-right: 10px;
    }
    .btn-block {
      width: 100%;
      padding: 15px;
      font-size: 18px;
      background-color: #007bff;
      border: none;
      border-radius: 5px;
      transition: background-color 0.3s ease;
    }
    .btn-block:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Shipping Address Section -->
    <div class="shipping-address">
      <h2>Select Shipping Address</h2>
      <div class="address-list">
        <% if (addresses && addresses.length > 0) { %>
          <% console.log('Addresses:', addresses); %> <!-- Debugging: Log addresses to the server console -->
          <% addresses.forEach(function(address) { %>
            <div class="address-card">
              <label>
                <input 
                  type="radio" 
                  name="selectedAddress" 
                  value="<%= address._id %>" 
                  <%= address.default ? 'checked' : '' %>
                >
                <div class="address-content">
                  <div class="address-name"><%= address.name %></div>
                  <div class="address-details">
                    <%= address.adressType %> - <%= address.landMark %>, <%= address.city %>, <%= address.state %>, <%= address.pincode %>
                  </div>
                  <div class="address-phone">
                    <i class="fas fa-phone-alt me-2"></i> <%= address.phone %>
                    <% if (address.altPhone) { %>
                      <span class="ms-3"><i class="fas fa-phone-alt me-2"></i> <%= address.altPhone %></span>
                    <% } %>
                  </div>
                </div>
              </label>
            </div>
          <% }); %>
        <% } else { %>
          <p>No address available. Please add an address.</p>
        <% } %>
      </div>
      <a href="/profile/address/add" class="add-address-btn">
        <i class="fas fa-plus me-2"></i> Add New Address
      </a>
    </div>

    <!-- Order Summary Section -->
    <div class="order-summary">
      <h2>Order Summary <span class="badge badge-primary"><%= cart.items.length %> Items</span></h2>
      <% cart.items.forEach(function(item) { %>
        <div class="product-details">
          <img 
            src="<%= item.productId.productImages && item.productId.productImages.length > 0 ? item.productId.productImages[0] : '/api/placeholder/100/100' %>" 
            alt="<%= item.productId.productName %>" 
            class="product-image"
          >
          <div class="product-info">
            <h3><%= item.productId.productName %></h3>
            <p>Quantity: <%= item.quantity %></p>
            <p>Price: ₹<%= item.price %></p>
          </div>
        </div>
      <% }); %>
      <p class="total" id="total">Total Amount: ₹<%= summary.originalPrice.toFixed(2) %></p>
      <p class="discount" id="discount">Discount: ₹0.00</p>
      <p class="grand-total" id="grand-total">Grand Total: ₹<%= summary.total.toFixed(2) %></p>

      <!-- Coupon Form -->
      <div class="cart-discount">
        <form id="couponForm">
          <div class="input-group">
            <input
              type="text"
              id="coupon-code"
              class="coupon-input"
              required
              placeholder="Enter coupon code"
              value="WELCOME500"
            />
            <button id="applyCoupon" class="apply-button" type="button">
              <i class="fas fa-tag me-2"></i> Apply
            </button>
            <button id="removeCoupon" class="apply-button" type="button">
              <i class="fas fa-times me-2"></i> Remove
            </button>
          </div>
        </form>
        <button id="showCouponsButton" class="apply-button">
          <i class="fas fa-ticket-alt me-2"></i> Show Available Coupons
        </button>
      </div>

      <!-- Payment Methods -->
      <div class="payment-methods">
        <h3><i class="fas fa-credit-card me-2"></i> Select Payment Method</h3>
        <div class="payment-option">
          <label>
            <input type="radio" id="cod" name="paymentMethod" value="COD" checked>
            <span><i class="fas fa-money-bill-wave me-2"></i> Cash on Delivery</span>
          </label>
        </div>
        <div class="payment-option">
          <label>
            <input type="radio" id="razorpay" name="paymentMethod" value="Razorpay">
            <span><i class="fas fa-credit-card me-2"></i> Razorpay</span>
          </label>
        </div>
        <div class="payment-option">
          <label>
            <input type="radio" id="wallet" name="paymentMethod" value="Wallet">
            <span><i class="fas fa-wallet me-2"></i> Wallet (Available: ₹1,200)</span>
          </label>
        </div>
      </div>

      <button onclick="placeOrder()" id="placeOrderBtn" class="btn btn-primary btn-block">
        <i class="fas fa-shopping-bag me-2"></i> Place Order
      </button>
    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
  <script>
    $(document).ready(function() {
      $('input[name="selectedAddress"]').change(function() {
        $(".address-card").removeClass("selected");
        $(this).closest(".address-card").addClass("selected");
      });

      $("#applyCoupon").click(function() {
        $("#removeCoupon").prop("disabled", false);
        $(this).prop("disabled", true);
        $("#discount").text("Discount: ₹500.00");
        $("#grand-total").text("Grand Total: ₹<%= summary.total.toFixed(2) %>");
        $("<div class='alert alert-success mt-2'>Coupon applied successfully!</div>")
          .insertAfter("#couponForm")
          .fadeOut(3000);
      });

      $("#removeCoupon").click(function() {
        $("#applyCoupon").prop("disabled", false);
        $(this).prop("disabled", true);
        $("#coupon-code").val("");
        $("#discount").text("Discount: ₹0.00");
        $("#grand-total").text("Grand Total: ₹<%= summary.total.toFixed(2) %>");
      });

      
    });

    function placeOrder() {
  // Get selected address
  let selectedAddress = $('input[name="selectedAddress"]:checked').val();
  if (!selectedAddress) {
    alert("Please select a shipping address");
    return;
  }
  
  // Get payment method
  let paymentMethod = $('input[name="paymentMethod"]:checked').val();
  
  // Get coupon code (if any)
  let couponCode = $("#coupon-code").val();
  
  // Calculate values from the UI
  let totalPrice = parseFloat("<%= summary.originalPrice %>"); 
  let discount = 0;
  
  // If a coupon is applied, get the discount value
  if ($("#discount").text() !== "Discount: ₹0.00") {
    discount = parseFloat($("#discount").text().replace("Discount: ₹", ""));
  }
  
  // Calculate final amount
  let finalAmount = totalPrice - discount;
  
  // Create order data object
  let orderData = {
    addressId: selectedAddress,
    paymentMethod: paymentMethod,
    coupon: couponCode,
    totalPrice: totalPrice,
    discount: discount,
    finalAmount: finalAmount,
    status: paymentMethod === "COD" ? "Pending" : "Processing",
    couponApplied: discount > 0
  };
  
  // Disable the place order button to prevent multiple submissions
  $("#placeOrderBtn").prop("disabled", true).html('<i class="fas fa-spinner fa-spin me-2"></i> Processing...');
  
  // Submit the order via AJAX
  $.ajax({
    url: '/order/place',
    method: 'POST',
    data: JSON.stringify(orderData),
    contentType: 'application/json',
    dataType: 'json',
    success: function(response) {
      console.log("Order response:", response); // Debug log
      
      if (response.success) {
        // Make sure we're accessing the orderId correctly

        console.log('order object',response.order)
        const orderId = response.order&&response.order._id
        
        if (!orderId) {
          console.error("No order ID returned from server");
          alert("Order placed but confirmation page couldn't be loaded. Please check your orders history.");
          window.location.href = "/profile/orders";
          return;
        }
        
        // Redirect to confirmation page with the order ID
        window.location.href = `/order/confirmation/${orderId}`;
      } else {
        alert(response.message || "Failed to place order. Please try again.");
        $("#placeOrderBtn").prop("disabled", false).html('<i class="fas fa-shopping-bag me-2"></i> Place Order');
      }
    },
    error: function(xhr, status, error) {
      console.error("AJAX Error:", xhr.responseText);
      alert("An error occurred while placing your order. Please try again.");
      $("#placeOrderBtn").prop("disabled", false).html('<i class="fas fa-shopping-bag me-2"></i> Place Order');
    }
  });
}
  </script>
</body>
</html>